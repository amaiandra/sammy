<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="250dp"
    android:background="#000000">

    <EditText
        android:layout_marginTop="30dp"
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:layout_alignParentTop="true"
        android:textColor="#000000"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/greenallround"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:hint="Password"
        android:layout_below="@+id/username"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/greenallround"
        />
    <EditText
        android:id="@+id/password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:hint="Re-write your password"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/greenallround"
        android:layout_below="@+id/password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_marginRight="7dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/btn_user_accept"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Accept"


        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"

        android:background="#41D2D2"
        android:textColor="#ffffff"
        android:textSize="27sp"/>
    <Button
        android:layout_marginLeft="7dp"
        android:id="@+id/btn_user_cancel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Cancel"

        android:background="#41D2D2"
        android:textColor="#ffffff"
        android:textSize="27sp"
        android:layout_alignTop="@+id/btn_user_accept"
        android:layout_alignParentLeft="true"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="signup"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:id="@+id/textView9"
        android:textIsSelectable="true"
        android:typeface="sans"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
